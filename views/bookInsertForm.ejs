<form class="form-horizontal" action = "/livres" method="post">
    <div class="form-group">
        <label class="col-xs-2 col-form-label" for="lecteur">Lecteur</label>
        <div class="col-xs-10">
            <select id="lecteur" name="lecteur" class="form-control">
                <option value="Stéphanie">Stéphanie</option>
                <option value="Marie-France">Marie-France</option>
                <option value="Florent">Florent</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-xs-2 col-form-label" for="titre">Titre</label>
        <div class="col-xs-10">
            <input type="text" id="titre" name="titre" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label class="col-xs-2 col-form-label" for="auteur">Auteur</label>
        <div class="col-xs-10">
            <input type="text" id="auteur" name="auteur" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label for="langue" class="col-xs-2 col-form-label">Langue:</label>
        <div class="col-xs-10">
            <select id="langue" name="langue" class="form-control">
                <option value="Français">Français</option>
                <option value="Anglais">Anglais</option>
                <option value="Espagnol">Espagnol</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="genre" class="col-xs-2 col-form-label">Genre</label>
        <div class="col-xs-10">
            <select id="genre" name="genre" class="form-control">
            <% for(var i=0; i<genres.length;i++) {%>
                <option value="<%=genres[i].genre %>"><%=genres[i].genre %></option>
            <% } %>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="pages" class="col-xs-2 col-form-label">Nombre de Pages</label>
        <div class="col-xs-10">
            <input type="text" id="pages" name="pages" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label for="pages" class="col-xs-2 col-form-label">Date</label>
        <div class="col-xs-10">
            <input type="date" id="date" name="date" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label class="col-xs-2 col-form-label">Choisir une note</label>
        <div class= "col-xs-10">
            <% for(var i=1; i<=10; i++) {%>
            <label class="form-check-inline">
                <input type="radio" name="note" value="<%=i%>/10" class="form-check-input"><%=i%>
            </label>
            <% } %>
        </div>
    </div>
    <div class="form-group">
        <label for="commentaires" class="col-xs-2 col-form-label">Commentaires</label>
        <div class="col-xs-10">
            <textarea id="commentaires" name="commentaires" class="form-control"rows="3"></textarea>
        </div>
    </div>
    <div class="col-sm-offset-2 col-sm-10">
        <button  type="submit" class="btn btn-primary">Publier</button>
    </div>
</form>